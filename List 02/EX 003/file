#include <stdio.h>
#include <string.h>

int main(){
    
//opções de menu

int escolhaUsuario;
    struct evento{
    int horarioHora;
    int horarioMin;
    int eventoDia;
    int eventoMes;
    int eventoAno;
    char eventoDesc[50];
    };

    struct evento evento1;
    int eventoPreenchido = 0;

    do{

    printf("Selecione uma opcao abaixo (1-3):\n\n");
    printf("1 - Preencher.\n");
    printf("2 - Imprimir. \n");
    printf("3 - Sair.\n\n");
    scanf("%d", &escolhaUsuario);
    getchar();



    switch(escolhaUsuario){

        case 1:
            printf("\nDigite o horario (EM HORAS):\n");
            scanf("%d", &evento1.horarioHora);
            getchar();
            printf("Digite o horario (EM MINUTOS):\n");
            scanf("%d", &evento1.horarioMin);
            getchar();
            printf("Digite o dia do evento:\n");
            scanf("%d", &evento1.eventoDia);
            getchar();
            printf("Digite o mes do evento:\n");
            scanf("%d", &evento1.eventoMes);
            getchar();
            printf("Digite o ano do evento:\n");
            scanf("%d", &evento1.eventoAno);
            getchar();
            printf("Anote a descricao do evento:\n");
            fgets(evento1.eventoDesc, sizeof(evento1.eventoDesc), stdin);

            eventoPreenchido = 1;
            printf("\nAnotacao preenchida!!");
            break;
        case 2:
            printf("\nINF DO EVENTO:\n\n");
            if (eventoPreenchido == 1){
            printf("HORARIO: %d:%d.\n", evento1.horarioHora, evento1.horarioMin);
            printf("DATA: %d/%d/%d.\n", evento1.eventoDia, evento1.eventoMes, evento1.eventoAno);
            printf("Desc: %s\n", evento1.eventoDesc);
            }else{
            printf("\nNenhum evento informado.\n");
            }
            break;
        case 3:
            printf("\nEncerrando o programa...");
            break;
        default:
            printf("\nOpcao invalida!!\n");
            break;
    }
    }while(escolhaUsuario != 3);
}
